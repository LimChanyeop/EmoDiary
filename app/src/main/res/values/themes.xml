<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmoDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slate</item>
        <item name="colorPrimaryDark">@color/gray_4</item>
        <item name="colorPrimaryVariant">@color/slate</item>
        <item name="colorOnPrimary">@color/ceramic</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_1</item>
        <item name="colorSecondaryVariant">@color/gray_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/gray_1</item>
        <item name="android:windowBackground">@color/gray_4</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>
    <style name="spinnerTheme">
        <item name="android:textColor">@color/gray_5</item>
    </style>
</resources>